<%= form_for :guess, url: make_guess_path, remote: true, html: {class: "input-group center"} do |f| %>
  <%= f.text_field :feet, class: "form-control half", placeholder: "Height (feet)" %>
  <%= f.text_field :inches, class: "form-control half", placeholder: "Height (inches)" %>
  <br>
  <%= f.text_field :weight, class: "form-control", placeholder: "Weight (pounds)" %>
  <%= f.submit "Submit", class: "btn btn-default btn-primary"%>
<% end %>